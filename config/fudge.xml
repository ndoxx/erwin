<?xml version="1.0" encoding="utf-8"?>
<Config>
	<atlas>
		<texture>
			<batch input="source/Applications/Sandbox/assets/textures/atlas/upack"
				   output="source/Applications/Sandbox/assets/textures/atlas">
				<export>
					<file_type>CAT</file_type>
					<texture_compression>DXT5</texture_compression>
					<blob_compression>deflate</blob_compression>
				</export>
			</batch>
		</texture>
		<font>
			<batch input="source/Applications/Sandbox/assets/textures/atlas/upack"
				   output="source/Applications/Sandbox/assets/textures/atlas">
				<export>
					<file_type>CAT</file_type>
					<blob_compression>deflate</blob_compression>
				</export>
			</batch>
		</font>
	</atlas>

	<texmap>
		<batch input="source/Applications/Sandbox/assets/textures/map/upack"
			   output="source/Applications/Sandbox/assets/textures/map">
			<config>source/Applications/Sandbox/assets/textures/map/upack/texture_maps.xml</config>
		</batch>
	</texmap>

	<shader>
		<include path="source/Erwin/assets/shaders"/>
		<batch input="source/Erwin/assets/shaders"
			   output="source/Erwin/assets/shaders"/>
		<batch input="source/Applications/FractalExplorer/assets/shaders"
			   output="source/Applications/FractalExplorer/assets/shaders"/>
		<batch input="source/Applications/Sandbox/assets/shaders"
			   output="source/Applications/Sandbox/assets/shaders"/>
	</shader>
</Config>