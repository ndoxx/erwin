<?xml version="1.0" encoding="utf-8"?>
<Keymap>
	<action name="ACTION_FREEFLY_TOGGLE"        desc="Toggle freefly control" key="F1" trigger="press"/>
	<action name="ACTION_FREEFLY_MOVE_FORWARD"  desc="Move forward" 		  key="W"/>
	<action name="ACTION_FREEFLY_MOVE_BACKWARD" desc="Move backward" 		  key="S"/>
	<action name="ACTION_FREEFLY_STRAFE_LEFT"   desc="Strafe left" 			  key="A"/>
	<action name="ACTION_FREEFLY_STRAFE_RIGHT"  desc="Strafe right" 		  key="D"/>
	<action name="ACTION_FREEFLY_ASCEND"        desc="Ascend" 				  key="SPACE"/>
	<action name="ACTION_FREEFLY_DESCEND"       desc="Descend" 				  key="LEFT_CONTROL"/>
	<action name="ACTION_FREEFLY_GO_FAST"       desc="Move faster" 			  key="LEFT_SHIFT"/>

	<action name="ACTION_DROP_SELECTION" desc="Invalidate current selection" key="Q"/>

	<action name="ACTION_EDITOR_CYCLE_MODE" desc="Cycle between editor modes" key="C"/>
</Keymap>